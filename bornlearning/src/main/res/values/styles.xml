<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BornLearningButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/main_button_edge_margin</item>
        <item name="android:textColor">@color/bornLearningMain</item>
        <item name="android:background">@color/bornLearningLightGray</item>
    </style>
    
    <style name="BornLearningHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/headers_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BornLearningSpinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bornLearningMain</item>
        <item name="android:backgroundTint">@color/bornLearningLight</item>
        <item name="android:popupBackground">@color/bornLearningLight</item>
        <item name="android:layout_marginHorizontal">@dimen/main_button_edge_margin</item>
    </style>

</resources>
