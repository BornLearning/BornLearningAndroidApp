<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grp15.cmpe272.unitedwayapp.bornlearning.MainFragment">


    <Spinner
        android:id="@+id/center_selection_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_button_edge_margin"
        android:layout_marginTop="@dimen/top_button_top_margin"
        android:contentDescription="@string/select_center"/>

    <Button
        android:id="@+id/take_assessment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/between_buttons_margin"
        android:layout_marginHorizontal="@dimen/main_button_edge_margin"
        android:text="@string/take_assessment" />

    <Button
        android:id="@+id/view_history_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_button_edge_margin"
        android:layout_marginTop="@dimen/between_buttons_margin"
        android:text="@string/view_history" />

</LinearLayout>
